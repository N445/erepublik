{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ profile.name }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ profile.identifier }}</td>
            </tr>
            <tr>
                <th>IsAlive</th>
                <td>{{ profile.isAlive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ profile.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_profile_index') }}">back to list</a>

    <a href="{{ path('profile_profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile_profile/_delete_form.html.twig') }}
{% endblock %}
